@{
    ViewData["Title"] = "Home Page";
}

<div class="flex justify-center items-center h-96">
    <div class="container mx-auto p-4 flex justify-center items-center md:flex-row flex-col">
        <div class="w-full md:w-1/2 p-4">
            <h1 class="text-6xl font-bold mb-4 text-white">Welcome to Invoice App</h1>
            <p class="text-lg mb-4 text-white">Manage your invoices with ease.</p>
            <div class="flex justify-center md:justify-start">
                <a asp-action="Login" asp-controller="Account"
                    class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mr-4">Sign In</a>
                <a asp-action="Register" asp-controller="Account"
                    class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">Sign Up</a>
            </div>
        </div>
        <div class="w-full md:w-1/2 p-4 text-center text-5xl">
            <i class="fas fa-file-invoice fa-5x text-blue-500"></i>
        </div>
    </div>
</div>